@model IEnumerable<OdeToFood.Data.Models.Restaurant>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1 class="display-4">Welcome</h1>
    <div>
        There are @Model.Count() restaurants in the db.
    </div>
</div>

<ul>
    @foreach (var restaurant in Model)
            {
                <li>@restaurant.Name</li>
            }
</ul>

